<h2>Edit Movie</h2>

{{#if movie}}
	<form method='post' action='/movies/save/{{movie.id}}'>
		<div class='form-group'>
			<label for='title'>Title</label>
			<input name='title' value='{{movie.title}}' type='text' class='form-control' id='title' />
		</div>
		<div class='form-group'>
			<label for='genre'>Genre</label>
			<input name='genre' value='{{movie.genre}}' type='text' class='form-control' id='genre' />
		</div>
		<div class='form-group'>
			<label for='plot'>Plot</label>
			<input name='plot' value='{{movie.plot}}' type='text' class='form-control' id='plot' />
		</div>
		<div class='form-group'>
			<label for='plot'>Cast</label>
			<select name='cast' value='{{movie.cast}}' class='custom-select' multiple>
				{{#each celebrities}}
					<option value='{{this.id}}'>{{this.name}}</option>
				{{/each}}
			</select>
		</div>
		<a href='/movies' class='btn btn-secondary'>Back</a>
		<button type='submit' class='btn btn-primary'>Save</button>
	</form>
{{/if}}